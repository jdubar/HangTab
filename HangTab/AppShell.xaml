<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HangTab.Views"
    x:Class="HangTab.AppShell"
    FlyoutBehavior="Disabled">

    <!-- <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:BowlerOverviewPage}"
        Route="MainPage" /> -->
    <TabBar>
        <Tab Icon="home.png" Title="Home">
            <!--<ShellContent ContentTemplate="{DataTemplate views:HomePage}" />-->
        </Tab>
        <Tab Title="Bowlers">
            <Tab.Icon>
                <FontImageSource
                    FontFamily="MaterialIcons"
                    Glyph="{StaticResource groups}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:BowlerOverviewPage}" />
        </Tab>
        <Tab Icon="calendar_month.png" Title="Season">
            <!--<ShellContent ContentTemplate="{DataTemplate views:SeasonPage}" />-->
        </Tab>
        <Tab Title="Settings">
            <Tab.Icon>
                <FontImageSource
                    FontFamily="MaterialIcons"
                    Glyph="{StaticResource settings}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
