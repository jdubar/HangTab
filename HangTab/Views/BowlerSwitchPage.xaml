<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="HangTab.Views.BowlerSwitchPage"
    x:DataType="vm:BowlerSwitchViewModel">
    
    <Shell.TitleView>
        <Label
            Text="Select a sub"
            Style="{StaticResource Label_PageTitle}" />
    </Shell.TitleView>
    
    <ContentPage.Content>
        <CollectionView
            ItemsSource="{Binding Subs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        x:DataType="vm:BowlerListItemViewModel"
                        Padding="5"
                        ColumnDefinitions="Auto,*"
                        RowDefinitions="Auto,Auto,Auto"
                        VerticalOptions="Center">

                        <!--Avatar Image-->
                        <toolkit:AvatarView
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Style="{StaticResource CachedAvatarProfile}"
                            ImageSource="{Binding ImageUrl}"
                            WidthRequest="80"
                            HeightRequest="80"
                            Margin="15,10,10,10"
                            Text="{Binding Initials}"
                            FontSize="20" />
                            
                        <!--Full Name-->
                        <Label
                            FontSize="Large"
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding Name}"
                            Style="{StaticResource Label_Name}" />
                        
                        <!--Separator-->
                        <BoxView
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource BoxViewSeparator}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <ContentView>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="380">
                        <Label
                            Text="You have no subs"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center" />
                        <Label
                            Text="Create subs on the Bowlers page"
                            HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </ContentView>
            </CollectionView.EmptyView>
        </CollectionView>
    </ContentPage.Content>
</views:ContentPageBase>