<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    xmlns:models="clr-namespace:HangTab.Models"
    x:Class="HangTab.Views.BowlerOverviewPage"
    x:DataType="vm:BowlerListOverviewViewModel">
    
    <!--Page titlebar-->
    <Shell.TitleView>
        <Label
            Text="All Bowlers"
            Style="{StaticResource Label_PageTitle}" />
    </Shell.TitleView>
    
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter
                                    Property="BackgroundColor"
                                    Value="{StaticResource PrimaryDark}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid
            RowDefinitions="Auto,*">
            
            <!--Search Bar-->
            <StackLayout
                Grid.Row="0">
                <Border
                    Style="{StaticResource RoundedCornerBorder}">
                    <SearchBar
                        Placeholder="Search by name" 
                        Margin="0,0,0,-1"
                        Text="{Binding SearchText, Mode=TwoWay}"
                        Style="{StaticResource SearchBar}" />
                </Border>
                <BoxView
                    Style="{StaticResource BoxViewSeparator}" />
            </StackLayout>
            
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Bowlers}"
                SelectedItem="{Binding SelectedBowler}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding NavigateToEditSelectedBowlerCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5,2"
                            StrokeShape="RoundRectangle 5"
                            BackgroundColor="{AppThemeBinding Dark={StaticResource Color_ElementGrey},
                                                                Light={StaticResource White}}">
                            <Grid
                                x:DataType="vm:BowlerListItemViewModel"
                                ColumnDefinitions="Auto,*,Auto,Auto">
                                
                                <Grid
                                    Grid.Row="0"
                                    Grid.RowSpan="2">
                                    
                                    <!--Bowler Inactive Dot--><!--
                                    <Border
                                        Style="{StaticResource NotificationDot_Inactive}"
                                        IsVisible="{Binding IsInactive}"
                                        ZIndex="2">
                                        <Image>
                                            <Image.Source>
                                                <FontImageSource
                                                    FontFamily="MaterialIcons"
                                                    Glyph="{StaticResource close}"
                                                    Color="{StaticResource White}"/>
                                            </Image.Source>
                                        </Image>
                                    </Border>-->
                                    
                                    <!--Bowler Is A Substitute-->
                                    <Border
                                        Style="{StaticResource Notification_Sub}"
                                        IsVisible="{Binding IsSub}"
                                        ZIndex="2">
                                        <Label
                                            Text="SUB"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            TextColor="{StaticResource White}"
                                            HorizontalOptions="Center" />
                                    </Border>
                                
                                    <!--Avatar Image-->
                                    <toolkit:AvatarView
                                        Style="{StaticResource CachedAvatarProfile}"
                                        ImageSource="{Binding ImageUrl}"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        Text="{Binding Initials}"
                                        FontSize="20" />
                            
                                </Grid>
                                
                                <VerticalStackLayout
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    VerticalOptions="Center">
                                    <!--Full Name-->
                                    <Label
                                        FontSize="Large"
                                        Text="{Binding Name}"
                                        Style="{StaticResource Label_Name}" />
                            
                                    <!--Total Hangings Count-->
                                    <Label
                                        Text="{Binding Hangings, StringFormat='Season hangings: {0}'}"
                                        Style="{StaticResource Label_Hangings}" />
                                </VerticalStackLayout>
                                                            
                                <!--Chevron Image-->
                                <Image
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="15,0"
                                    Style="{StaticResource Image_ListArrowRight}">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="MaterialIcons"
                                            Glyph="{StaticResource chevron_right}"
                                            Color="{AppThemeBinding Dark={StaticResource White},
                                                                    Light={StaticResource Color_ElementGrey}}"/>
                                    </Image.Source>
                                </Image>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <Grid
                        HeightRequest="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=Height}">
                        <VerticalStackLayout
                            VerticalOptions="Center">
                            <Label
                                Text="No Bowlers Found"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center" />
                            <Label
                                Grid.Row="1"
                                Text="Create a bowler using the button above"
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>
            <ImageButton
                Grid.Row="1"
                Style="{StaticResource FAB}"
                Command="{Binding NavigateToAddBowlerCommand}"
                VerticalOptions="End"
                Margin="0,0,20,22">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource person_add}"
                        Size="40"
                        Color="{StaticResource White}" />
                </ImageButton.Source>
                <ImageButton.Shadow>
                    <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray950}}"
                            Offset="0,8"
                            Radius="16"
                            Opacity="0.9" />
                </ImageButton.Shadow>
            </ImageButton>
        </Grid>
    </ContentPage.Content>
</views:ContentPageBase>