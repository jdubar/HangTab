<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    xmlns:models="clr-namespace:HangTab.Models"
    x:Class="HangTab.Views.BowlerOverviewPage"
    Title="Bowlers"
    x:DataType="vm:BowlerListOverviewViewModel">
    
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding NavigateToAddBowlerCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIcons"
                    Glyph="{StaticResource person_add}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid
            RowDefinitions="50,*">
            <Border
                StrokeShape="RoundRectangle  5"
                Margin="5,1">
                <SearchBar
                    Placeholder="Search by name" 
                    Text="{Binding SearchText, Mode=TwoWay}"/>
            </Border>
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Bowlers}"
                IsGrouped="True"
                SelectedItem="{Binding SelectedBowler}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding NavigateToEditSelectedBowlerCommand}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <!--Group Name-->
                        <Label
                            x:DataType="models:BowlerGroup"
                            Text="{Binding GroupName}"
                            Style="{StaticResource Label_Header}" />
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            x:DataType="vm:BowlerListItemViewModel"
                            Padding="5"
                            VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--Avatar Image-->
                            <toolkit:AvatarView
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Style="{StaticResource CachedImageProfile}"
                                ImageSource="{Binding ImageUrl}"
                                WidthRequest="80"
                                HeightRequest="80"
                                CornerRadius="40"
                                Text="{Binding Initials}"
                                FontSize="20"/>
                            
                            <!--Full Name-->
                            <Label
                                FontSize="Large"
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Name}"
                                Style="{StaticResource Label_Name}" />
                            
                            <!--Chevron Image-->
                            <Image
                                Grid.Row="0"
                                Grid.Column="2"
                                Grid.RowSpan="2"
                                Margin="0,10,15,0">
                                <Image.Source>
                                    <FontImageSource
                                        FontFamily="MaterialIcons"
                                        Glyph="{StaticResource chevron_right}" />
                                </Image.Source>
                            </Image>

                                <!--Total Hangings Count-->
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Total hangings: 0"
                                Style="{StaticResource Label_NickName}" />

                            <!--Separator-->
                            <BoxView
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Style="{StaticResource BoxViewSeparator}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.GroupFooterTemplate>
                    <DataTemplate>
                        <Label
                            x:DataType="models:BowlerGroup"
                            Text="{Binding Count, StringFormat='Total: {0:D}'}"
                            Style="{StaticResource Label_Footer}" />
                    </DataTemplate>
                </CollectionView.GroupFooterTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="380">
                            <Label
                                Text="No Bowlers Found"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center" />
                            <Label
                                Text="Create a bowler using the button above"
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</views:ContentPageBase>