<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    xmlns:models="clr-namespace:HangTab.Models"
    xmlns:controls="clr-namespace:HangTab.Views.Controls"
    x:Class="HangTab.Views.BowlerOverviewPage"
    x:DataType="vm:BowlerListOverviewViewModel">
    
    <!--Page titlebar-->
    <Shell.TitleView>
        <Label
            Text="All Bowlers"
            Style="{StaticResource PageTitle}" />
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid
            RowDefinitions="Auto,*">
            
            <!--Search Bar-->
            <StackLayout
                Grid.Row="0">
                <Border
                    Margin="5,5,5,1"
                    Style="{StaticResource SearchBarFrame}">
                    <SearchBar
                        Placeholder="Search by name" 
                        Margin="0,0,0,-1"
                        Text="{Binding SearchText, Mode=TwoWay}" />
                </Border>
                
                <BoxView
                    Style="{StaticResource Divider}" />
            </StackLayout>
            
            <!--Loading Indicator-->
            <controls:LoadingIndicator
                Grid.Row="1"
                ShowLoadingIndicator="{Binding IsLoading}"
                LoadingText="{Binding LoadingText}" />
            
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Bowlers}"
                SelectedItem="{Binding SelectedBowler}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding NavigateToEditSelectedBowlerCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5,2"
                            Style="{StaticResource RoundedCornerBorder}">
                            <Grid
                                x:DataType="vm:BowlerListItemViewModel"
                                ColumnDefinitions="Auto,*,Auto,Auto">
                                
                                <!--Avatar Image-->
                                <controls:UserImage
                                    ImageUrl="{Binding ImageUrl}"
                                    Initials="{Binding Initials}"
                                    ShowSub="{Binding IsSub}" />
                                
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    VerticalOptions="Center">
                                    <!--Full Name-->
                                    <Label
                                        FontSize="Large"
                                        Text="{Binding Name}"
                                        Style="{StaticResource BowlerName}" />
                            
                                    <!--Total Hangings Count-->
                                    <Label
                                        Text="{Binding Hangings, StringFormat='Season hangings: {0}'}"
                                        Style="{StaticResource Label_Hangings}" />
                                    
                                </VerticalStackLayout>
                                                            
                                <!--Chevron Image-->
                                <Image
                                    Grid.Column="3"
                                    Margin="15,0">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="MaterialIcons"
                                            Glyph="{StaticResource chevron_right}"
                                            Color="{DynamicResource TextPrimaryColor}"/>
                                    </Image.Source>
                                </Image>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <!--Empty List Message-->
                <CollectionView.EmptyView>
                    <controls:EmptyCollectionMessage
                        IsVisible="{Binding LoadingComplete}"
                        Message="No Bowlers Found"
                        SubMessage="Create a bowler using the button below" />
                </CollectionView.EmptyView>
            </CollectionView>
            <ImageButton
                Grid.Row="1"
                Style="{StaticResource FAB}"
                Command="{Binding NavigateToAddBowlerCommand}"
                VerticalOptions="End"
                Margin="0,0,20,22">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource person_add}"
                        Size="40"
                        Color="{DynamicResource PrimaryContrastTextColor}" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </ContentPage.Content>
</views:ContentPageBase>