<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:BowlingMaui.Helpers"
             x:Name="this"
             x:Class="HangTab.Views.Components.CardView">
    <Border BindingContext="{x:Reference this}"
            WidthRequest="300"
            HeightRequest="100"
            StrokeThickness="4"
            StrokeShape="RoundRectangle 10">
        <StackLayout Orientation="Horizontal">
            <Label Text="{x:Static icons:GoogleFont.Account_circle}"
                   Style="{x:StaticResource GoogleFont}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="48"
                   Margin="10 20 10 20"/>
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="{Binding CardTitle, FallbackValue='Card Title'}"/>
                <Label Text="Total Hangings: 0"/>
            </VerticalStackLayout>
        </StackLayout>
    </Border>
</ContentView>
