<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:HangTab.Helpers"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="this"
             x:Class="HangTab.Views.Components.CardView">
    <Border BindingContext="{x:Reference this}"
            WidthRequest="300"
            HeightRequest="100"
            StrokeThickness="4"
            StrokeShape="RoundRectangle 10">
        <StackLayout Orientation="Horizontal">
            <Image Source="account_circle.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HeightRequest="48"
                   Margin="10">
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Dark={StaticResource White},
                                                                               Light={StaticResource Gray300}}" />
                </Image.Behaviors>
            </Image>
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="{Binding CardTitle, FallbackValue='Card Title'}"/>
                <Label Text="Total Hangings: 0"/>
            </VerticalStackLayout>
        </StackLayout>
    </Border>
</ContentView>
