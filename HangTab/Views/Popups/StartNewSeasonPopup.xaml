<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:HangTab.ViewModels.Popups"
    xmlns:popups="clr-namespace:HangTab.Views.Popups"
    x:Class="HangTab.Views.Popups.StartNewSeasonPopup"
    x:DataType="vm:StartNewSeasonPopupViewModel">
    
    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type popups:StartNewSeasonPopup}">
            <Setter Property="Size" Value="300,170" />
            <Setter Property="Color" Value="{DynamicResource PageBackgroundColor}" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Start" />
            <Setter Property="CanBeDismissedByTappingOutsideOfPopup" Value="True" />
        </Style>
    </toolkit:Popup.Resources>
    
    <VerticalStackLayout
        Spacing="10">
        <Label
            Text="Start a new season"
            Margin="10,10,10,5"
            Style="{StaticResource Header}" />
        
        <Label
            Text="Are you ready to start a new season?(Bowlers will not be deleted)"
            TextColor="{DynamicResource TextPrimaryColor}"
            Margin="20,5,10,0"
            Style="{StaticResource Body}" />

        <HorizontalStackLayout
            HorizontalOptions="End"
            Margin="10,0">
            <Button
                Text="No"
                Style="{StaticResource SecondaryButton}"
                Command="{Binding CancelCommand}" />
            <Button
                Text="Yes"
                Style="{StaticResource SecondaryButton}"
                Command="{Binding ConfirmCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
</toolkit:Popup>