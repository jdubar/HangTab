<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:HangTab.Views.Components"
             xmlns:model="clr-namespace:HangTab.ViewModels"
             xmlns:vm="clr-namespace:HangTab.Views.ViewModels"
             x:Class="HangTab.Views.SwitchBowlerPage"
             x:DataType="vm:MainViewModel"
             Title="Switch Bowler">
    <Grid>
        <Grid RowDefinitions="Auto, *"
              ColumnDefinitions="*, Auto">
            <VerticalStackLayout Grid.RowSpan="2"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="True"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                <Label Text="{Binding BusyText}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Grid Grid.Row="1"
                  RowDefinitions="*, Auto">
                <CollectionView Grid.Row="0"
                                x:Name="BowlerList"
                                ItemsSource="{Binding SwitchBowlers}"
                                Margin="0,10,0,0"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedBowler}"
                                SelectionChangedCommand="{Binding SwitchBowlerCommand}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10"
                                           Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:BowlerViewModel">
                            <Grid HorizontalOptions="Center"
                                    VerticalOptions="End"
                                    HeightRequest="80">
                                <components:CardView BowlerName="{Binding Bowler.FullName}"
                                                     IsSub="{Binding Bowler.IsSub}"
                                                     ImageUrl="{Binding Bowler.ImageUrl}"
                                                     TotalHangings="{Binding Bowler.TotalHangings}"
                                                     IsHidden="{Binding Bowler.IsHidden}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout HorizontalOptions="Center"
                                                 VerticalOptions="Center"
                                                 WidthRequest="380">
                                <Label Text="No Bowlers Found"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                                <Label Text="Try creating a bowler on the Bowlers page"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>