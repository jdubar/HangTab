<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:HangTab.ViewModels"
             xmlns:vm="clr-namespace:HangTab.Views.ViewModels"
             xmlns:components="clr-namespace:HangTab.Views.Components"
             xmlns:icons="clr-namespace:HangTab.Helpers"
             x:Class="HangTab.Views.ManageBowlersPage"
             x:DataType="vm:ManageBowlerViewModel"
             Title="Manage Bowlers">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ShowAddUpdateBowlerViewCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="GoogleFont"
                                 Glyph="{Static icons:GoogleFont.Person_add}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid RowDefinitions="Auto, *"
              ColumnDefinitions="*, Auto">
            <VerticalStackLayout Grid.RowSpan="2"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="True"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                <Label Text="{Binding BusyText}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Grid Grid.Row="1"
                  RowDefinitions="*, Auto">
                <CollectionView Grid.Row="0"
                                x:Name="BowlerList"
                                ItemsSource="{Binding AllBowlers}"
                                Margin="0,10,0,0">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10"
                                           Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:BowlerViewModel">
                            <SwipeView HeightRequest="80">
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem BackgroundColor="{DynamicResource Info}"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ManageBowlerViewModel}}, Path=ShowAddUpdateBowlerViewCommand}"
                                                   CommandParameter="{Binding .}">
                                            <SwipeItem.IconImageSource>
                                                <FontImageSource FontFamily="GoogleFont"
                                                                    Glyph="{Static icons:GoogleFont.Edit}"
                                                                    Size="20"/>
                                            </SwipeItem.IconImageSource>
                                        </SwipeItem>
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem BackgroundColor="{DynamicResource Error}"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ManageBowlerViewModel}}, Path=DeleteBowlerCommand}"
                                                   CommandParameter="{Binding Bowler.Id}">
                                            <SwipeItem.IconImageSource>
                                                <FontImageSource FontFamily="GoogleFont"
                                                                 Glyph="{Static icons:GoogleFont.Delete}"
                                                                 Size="20" />
                                            </SwipeItem.IconImageSource>
                                        </SwipeItem>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Grid HorizontalOptions="Center"
                                      VerticalOptions="End"
                                      HeightRequest="80">
                                    <components:CardView BowlerName="{Binding Bowler.FullName}"
                                                         IsSub="{Binding Bowler.IsSub}"
                                                         ImageUrl="{Binding Bowler.ImageUrl}"
                                                         TotalHangings="{Binding Bowler.TotalHangings}"
                                                         IsHidden="{Binding Bowler.IsHidden}"/>
                                </Grid>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout HorizontalOptions="Center"
                                                 VerticalOptions="Center"
                                                 WidthRequest="380">
                                <Label Text="No Bowlers Found"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                                <Label Text="Try creating a bowler using the button above"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>