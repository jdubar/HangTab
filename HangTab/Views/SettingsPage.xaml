<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    x:Class="HangTab.Views.SettingsPage"
    x:DataType="vm:SettingsViewModel">
    
    <Shell.TitleView>
        <Label
            Text="Settings"
            Style="{StaticResource Label_PageTitle}" />
    </Shell.TitleView>
    
    <TableView
        x:DataType="vm:SettingsViewModel"
        Intent="Settings">
        <TableRoot>
            
            <!--General Settings-->
            <TableSection
                Title="General Settings"
                TextColor="{StaticResource Primary}">
                <EntryCell
                    HorizontalTextAlignment="End"
                    Keyboard="Numeric"
                    Label="Weeks In The Season"
                    LabelColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Gray500}}"
                    Text="{Binding TotalSeasonWeeks, Mode=TwoWay}">
                </EntryCell>
            </TableSection>
            
            <!--Data Reset Options-->
            <TableSection
                Title="Data Reset"
                TextColor="{StaticResource Primary}">
                <TextCell
                    Command="{Binding ResetAllHangingsCommand}"
                    Text="Start New Season"
                    TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Gray500}}" />
                <TextCell
                    Command="{Binding DropAllTablesCommand}"
                    Text="Delete All Bowlers and Data"
                    TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Gray500}}" />
            </TableSection>
        </TableRoot>
    </TableView>
</views:ContentPageBase>