<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HangTab.Views"
    xmlns:vm="clr-namespace:HangTab.ViewModels"
    xmlns:converters="clr-namespace:HangTab.Converters"
    xmlns:dataAnnotations="clr-namespace:System.ComponentModel.DataAnnotations;assembly=System.ComponentModel.Annotations"
    x:Class="HangTab.Views.BowlerAddEditPage"
    x:DataType="vm:BowlerAddEditViewModel">
    
    <ContentPage.Resources>
        <converters:BowlerTypeEnumToTextConverter x:Key="BowlerTypeEnumToTextConverter" />
    </ContentPage.Resources>
    
    <!--Page titlebar-->
    <Shell.TitleView>
        <Grid>
            <Label
                Text="{Binding PageTitle}"
                Style="{StaticResource Label_PageTitle}" />
            <ImageButton
                Aspect="Center"
                HorizontalOptions="End"
                VerticalOptions="Center"
                CornerRadius="100"
                Margin="10,0"
                IsVisible="{Binding IsExistingBowler}"
                Command="{Binding DeleteBowlerCommand}">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource delete}"
                        Size="30"
                        Color="{AppThemeBinding Dark={StaticResource White},
                                                Light={StaticResource Black}}" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </Shell.TitleView>
    
    <Grid
        RowDefinitions="220,Auto,Auto,Auto,*,Auto"
        RowSpacing="10"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
            
        <!--Avatar Image/Update Avatar Button-->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="3"
            BackgroundColor="{StaticResource Color_LightGrey}">
            
            <!--Update Avatar Image Button-->
            <ImageButton
                Style="{StaticResource Image_Add}"
                ZIndex="2"
                Command="{Binding ShowAvatarOptionsBottomSheetCommand}"
                CommandParameter="{x:Reference NameEntry}">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource add_a_photo}"
                        Size="40"/>
                </ImageButton.Source>
            </ImageButton>
            
            <!--Avatar Image-->
            <Image
                Source="{Binding ImageUrl, TargetNullValue='person.png'}"
                ZIndex="1"/>
        </Grid>
            
        <!--Bowler Name Entry-->
        <VerticalStackLayout
            Grid.Row="1"
            Margin="10,20,10,0">
            <Grid
                ColumnDefinitions="Auto,*">
                <Image
                    Grid.Column="0"
                    Margin="5,0">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="MaterialIcons"
                            Glyph="{StaticResource person}"
                            Size="30"
                            Color="{AppThemeBinding Dark={StaticResource White},
                                                    Light={StaticResource Black}}" />
                    </Image.Source>
                </Image>
                <Entry
                    Grid.Column="1"
                    x:Name="NameEntry"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Name"
                    Keyboard="Text"
                    ReturnType="Done"
                    Text="{Binding Name}" />
            </Grid>
        </VerticalStackLayout>
        
        <!--Bowler Type Picker-->
        <Grid
            Grid.Row="2"
            Margin="10,0"
            ColumnDefinitions="Auto,*">
            <Image
                Grid.Column="0"
                Margin="5,0">
                <Image.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource group}"
                        Size="30"
                        Color="{AppThemeBinding Dark={StaticResource White},
                                                Light={StaticResource Black}}" />
                </Image.Source>
            </Image>
            <Picker
                Grid.Column="1"
                Title="Bowler type"
                ItemsSource="{Binding AllTypes}"
                ItemDisplayBinding="{Binding .,Converter={StaticResource BowlerTypeEnumToTextConverter}}"
                SelectedIndex="{Binding SelectedType}" />
        </Grid>
        
        <!--Deactivate Bowler Switch-->
        <HorizontalStackLayout
            Grid.Row="3"
            Margin="10,0"
            VerticalOptions="Center"
            IsVisible="{Binding IsExistingBowler}">
            <Image
                Grid.Column="0"
                Margin="5,0">
                <Image.Source>
                    <FontImageSource
                        FontFamily="MaterialIcons"
                        Glyph="{StaticResource person_off}"
                        Size="30"
                        Color="{AppThemeBinding Dark={StaticResource White},
                                                Light={StaticResource Black}}" />
                </Image.Source>
            </Image>
            
            <Label
                Text="Deactivate bowler"
                FontAttributes="Bold"
                VerticalOptions="Center"/>
            <Switch
                IsToggled="{Binding IsInactive, Mode=TwoWay}" />
        </HorizontalStackLayout>
                    
        <!--Validation Errors List-->
        <VerticalStackLayout
            Grid.Row="4"
            Margin="40,0,0,0"
            BindableLayout.ItemsSource="{Binding Errors}">
            <BindableLayout.ItemTemplate>
                <DataTemplate
                    x:DataType="dataAnnotations:ValidationResult">
                    <Label
                        Style="{StaticResource ErrorLabelStyle}"
                        Text="{Binding ErrorMessage}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
            
        <!--Submit Button-->
        <StackLayout
                Grid.Row="5"
                Margin="10">
            <Button
                Style="{StaticResource PrimaryButton}"
                Text="Save Changes"
                Command="{Binding SubmitCommand}" />
        </StackLayout>
    </Grid>
</views:ContentPageBase>