<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="BaseLabel" TargetType="Label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="{StaticResource Color_SecondaryGrey}" />
    </Style>
    
    <Style x:Key="Label_Header" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>
    <Style x:Key="Label_Footer" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="10,5,0,0" />
    </Style>
    <Style x:Key="Label_Name" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="10,10,0,0" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>
    <Style x:Key="Label_NickName" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="10,-10,0,0" />
    </Style>
    
    <Style x:Key="BoxViewSeparator" TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource Color_LightGrey}" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Margin" Value="0,5,0,0" />
    </Style>
    
    <Style x:Key="CachedImageProfile" TargetType="toolkit:AvatarView">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HeightRequest" Value="80" />
        <Setter Property="WidthRequest" Value="80" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="ErrorLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="TextColor" Value="{StaticResource Error}"/>
    </Style>

</ResourceDictionary>